<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/gray_light</item>
    </style>

    <style name="textStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_more</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="MovieTextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="MovieTextViewBig" parent="MovieTextView">
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textSize">@dimen/text_biggest</item>
    </style>

    <style name="MovieTextViewSmall" parent="MovieTextView">
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textSize">@dimen/text_more</item>
    </style>

    <style name="Divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/stroke</item>
        <item name="android:background">@color/lighter_gray</item>
        <item name="android:layout_marginLeft">@dimen/spacing</item>
        <item name="android:layout_marginRight">@dimen/spacing</item>
    </style>

</resources>

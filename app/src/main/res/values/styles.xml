<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:textColorPrimary">@color/lighter_gray</item>
        <item name="android:textColorSecondary">@color/lighter_gray</item>
        <item name="colorControlNormal">@color/lighter_gray</item>
        <item name="actionMenuTextColor">@color/lighter_gray</item>
    </style>

</resources>
